{
  "engines": {
    "composer": "^0.16.0"
  },
  "name": "ucsd-degree-network",
  "version": "0.1.14",
  "description": "Personal use, test-case, and education only, Business Network to illustrate using Access Control over university degree information Identifiable Information (PII).",
  "networkImage": "https://i.imgur.com/xhDFomw.gif",
  "networkImageanimated": "https://i.imgur.com/xhDFomw.gif",
  "scripts": {
    "prepublish": "mkdirp ./dist && composer archive create  --sourceType dir --sourceName . -a ./dist/org-degree-ucsd.bna",
    "pretest": "npm run lint",
    "lint": "eslint .",
    "postlint": "npm run licchk",
    "licchk": "license-check",
    "postlicchk": "npm run doc",
    "doc": "jsdoc --pedantic --recurse -c jsdoc.json",
    "test": "mocha -t 0 --recursive",
    "deploy": "./scripts/deploy.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bsollenb/degree-authenticity.git"
  },
  "keywords": [
    "access control",
    "security",
    "composer",
    "composer-network"
  ],
  "author": "Hyperledger Composer",
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^3.5.0",
    "composer-admin": "^0.16.0",
    "composer-cli": "^0.16.0",
    "composer-client": "^0.16.0",
    "composer-common": "^0.16.0",
    "composer-connector-embedded": "^0.16.0",
    "eslint": "^3.6.1",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.5.5",
    "license-check": "^1.1.5",
    "mkdirp": "^0.5.1",
    "mocha": "^3.2.0",
    "moment": "^2.17.1"
  },
  "license-check-config": {
    "src": [
      "**/*.js",
      "!./coverage/**/*",
      "!./node_modules/**/*",
      "!./out/**/*",
      "!./scripts/**/*"
    ],
    "path": "header.txt",
    "blocking": true,
    "logInfo": false,
    "logError": true
  }
}
